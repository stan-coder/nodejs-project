{{#extend "layout"}}
    {{#content "body"}}

        <h2>Users</h2>

         {{#users}}
             <div class="panel panel-primary w420">
					<div class="panel-heading">
						<h3 class="panel-title">{{email}}</h3>
					</div>
					<div class="panel-body">
						{{name}}<br/>
						{{surname}}<br/>
						{{prettyDate birthday}}<br/>
					</div>
				</div>
         {{/users}}

         {{#if pagination}}
         <div class="pgDiv">
	        <ul class="pagination pagination-lg">
				    <li{{{prev.class}}}><a{{{prev.page}}}>&laquo;</a></li>
				     {{{pagination}}}
				    <li{{{next.class}}}><a{{{next.page}}}>&raquo;</a></li>
				  </ul>
			  </div>
			{{/if}}

    {{/content}}
{{/extend}}
